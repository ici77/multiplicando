            android:name=".PortadaActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SelecciÃ³n de Tablas -->
        <activity android:name=".SeleccionTablasActivity" />
        <activity android:name=".NivelSuperadoActivity"/>

        <!-- Actividad del Juego -->
        <activity android:name=".JuegoActivity" />

        <!-- Actividad de Reporte -->
